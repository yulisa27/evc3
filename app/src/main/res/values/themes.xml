<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YulizaEv3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/firstColor</item>
        <item name="colorPrimaryDark">@color/secondColor</item>
        <item name="colorPrimaryVariant">@color/thirdColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fiveColor</item>
        <item name="colorSecondaryVariant">@color/fourColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Widget.YulizaEv3.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/firstColor</item>
        <item name="android:theme">@style/Theme.YulizaEv3</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
    <style name="Widget.YulizaEv3.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextAppearance">@style/TextAppearance.YulizaEv3.TextInputLayout.HintText</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
    <style name="TextAppearance.YulizaEv3.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
    <style name="TextAppearance.YulizaEv3.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
    </style>
</resources>